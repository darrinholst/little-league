<div class="team">
  <h3><%= @team.name %> (<%= @team.division.name %>)</h3>
  <div class="games">
    <span class="ical"><%= link_to 'ical', team_ical_url(@team, :protocol => "webcal") %></span>
    <div style="clear: both;"></div>
    <table class="table table-bordered">
      <thead>
        <tr>
          <td></td>
          <th>Time</th>
          <th>Visitor</th>
          <th>Home</th>
          <th>Field</th>
        </tr>
      </thead>
      <tbody>
        <% @team.games.each_with_index do |game, i| %>
          <tr class="<%= cycle("odd", "even") %>">
            <td><%= i + 1 %></td>
            <td><%= game.starts_at_display %></td>
            <td><%= game.visiting_team.name %></td>
            <td><%= game.home_team.name %></td>
            <td><%= game.field_name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <p><%= link_to 'Back', teams_path %></p>
</div>

