<% @divisions.each do |division| %>
  <div class="division">
    <h4><%= division.name %></h4>

    <ul class="teams">
      <% division.teams.sort_by{|t| t.name}.each do |team| %>
        <% if team.local? %>
          <li class="team"><%= link_to(team.name, team_path(team)) %></li>
        <% end %>
      <% end %>
    </ul>
  </div>
<% end %>

