<ul>
  <% current_division = nil %>

  <% @teams.each do |team| %>
    <% if current_division.nil? || !current_division.eql?(team.division.name) %>
      <% current_division = team.division.name %>
      <h4><%= current_division %></h4>
    <% end %>

    <li><%= link_to team.name, team_path(team) %></li>
  <% end %>
</ul>

