<%= form_tag(import_admin_games_path) %>
  <div class="form-group">
    <%= label_tag :division_id, "Division:" %>
    <%= select_tag :division_id, options_from_collection_for_select(Division.ordered.all, "id", "name"), include_blank: true %>
  </div>
  <div class="form-group textarea-with-example">
    <div>
      <%= label_tag :csv, "CSV:" %>
      <textarea name="csv" rows="20"><%= @import.csv %></textarea>
    </div>
