<%= form_for([:admin, @coach]) do |f| %>
  <%= errors_for(@coach) %>

  <div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number %>
  </div>

  <div class="field">
    <%= f.label :email_address %>
    <%= f.text_field :email_address %>
  </div>

  <div class="field">
    <%= f.label :division_id %>
    <%= f.select :division_id, Division.all.collect{|t| [t.name, t.id ]}, { :include_blank => true } %>
  </div>

  <div class="field">
    <%= f.label :team_id %>
    <%= f.select :team_id, Team.all.collect{|t| [t.name, t.id ]}, { :include_blank => true } %>
  </div>

  <div class="actions">
    <%= f.submit :class => "btn btn-primary" %> or <%= link_to "cancel", admin_coaches_path %>
  </div>
<% end %>
