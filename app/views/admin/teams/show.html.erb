<% @require_javascript = "pages/admin/team" %>

<div class="team">
  <h3><%= @team.name %> (<%= @team.division.name %>)</h3>

  <div class="coaches">
    <h4>Coaches (<%= @team.coaches.size %>)</h4>
    <%= render :partial => "common/coaches", :locals => {:coaches => @team.coaches} %>
  </div>

  <div class="players">
    <h4>Players (<%= @team.players.size %>)</h4>
    <%= render :partial => "common/players", :locals => {:players => @team.players} %>
  </div>

  <div class="games">
    <h4>Games (<%= @team.games.size %>)</h4>
    <%= render :partial => "common/games", :locals => {:games => @team.games} %>
  </div>

  <div class="dont-print">
    <%= link_to 'Edit', edit_admin_team_path(@team) %> |
    <%= link_to 'Back', admin_teams_path %>
  </div>
</div>
